= render 'nav'
.pub_art
  %h1 Published articles
  %table.table.table-striped
    %thead
      %tr
        %th id
        %th image
        %th title
        %th published
        %th created
        %th article description
        %th article content
        %th=t '.actions', :default => t("helpers.actions")
    %tbody
      - @posts_no_p.each do |post|
        %tr
          %td= link_to post.id, admin_path(post)
          %td= image_tag post.image(:small) if post.image?
          %td= admin.title
          %td= admin.published
          %td= set_time post.data_create
          %td= truncate(post.article_description.html_safe, :length => 123, :omission =>"...")
          %td= truncate(post.article_content.html_safe, :length => 123, :omission =>"...")
          %td
            = link_to t('.show', :default => t("helpers.links.show")), admin_path(admin), :class => 'btn btn-mini'
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_path(admin), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_path(admin), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

  = will_paginate @posts_no_p