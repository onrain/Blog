= render 'nav'
%div{style:"position:relative; top:35px; margin:0 auto; display:table;"}
  = render 'search'

-unless @search.empty?
  .pub_art
    %hr
          
    %table.table.table-striped
      %thead
        %tr#sort_field
          %th id
          %th image
          %th title
          %th published
          %th created
          %th article description
          %th article content
          %th=t '.actions', :default => t("helpers.actions")
      %tbody
        - @search.each do |post|
          %tr
            %td= link_to post.id, admin_path(post)
            %td= image_tag post.image(:small) if post.image?
            %td= post.title
            %td= post.published
            %td= set_time post.date_create
            %td= truncate(post.article_description.html_safe, :length => 123, :omission =>"...") if post.article_description?
            %td= truncate(post.article_content.html_safe, :length => 123, :omission =>"...") if post.article_content?
            %td
              = link_to t('.show', :default => t("helpers.links.show")), admin_path(post), :class => 'btn btn-mini'
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_path(post), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_path(post), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'
  = will_paginate @search
-else
  %h3{align:"center",style:"margin-top:30px;"}
    = search_title(params[:q], @search).html_safe
    