.articles
  -if notice
    #notice
      =notice
      
  - @articles.each do |art|
    #art_div
      = image_tag art.image.url(:medium)
      #art_f
        %h3
          = link_to art.title, article_path(art)
        Published:
        = set_time art.data_create
        #description
          = raw art.article_description
      = link_to 'Show', article_path(art)

%br

= will_paginate @articles