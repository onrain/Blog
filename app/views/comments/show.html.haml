%p
  %b Title:
  = @articles.title
%p
  %b Data create:
  = set_time @articles.data_create
%p
  %b Image
  = image_tag @articles.image.url(:medium)
%p
  %b Article description:
  = raw @articles.article_description
%p
  %b Article content:
  = raw @articles.article_content



- unless session[:user_id].nil?
  =render 'form'
- else
  %h3
    Please,
    = link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in"
%hr

- @comments_q.each do |comment|
  %p
    %b Username
    = comment.username
  %p
    %b Email
    = comment.email
  %p
    = set_time comment.data_p
  %p
    = comment.comment_content

= will_paginate @comments_q
  
= link_to "Back", home_path