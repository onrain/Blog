.article_show
  = link_to "Back", home_path, id:"back_url"
  #art_div
    %p
      = @articles.title
    %p
      = image_tag @articles.image.url(:medium), id:"show_img" if @articles.image?
    %p
      = raw @articles.article_content
    %p
      Data create:
      %i
        = set_time @articles.data_create
    %hr

  #comments_d
    - unless session[:user_id].nil?
      =render 'form'
    - else
      %h3
        Please login:
        = link_to image_tag("facebook_logo2.png", width:"50", height:"50"), "/auth/facebook", id: "sign_in_art"
    %hr
    #comment_box
      - @comments_q.each do |comment|
        %p#c_user
          Username
          = comment.username
        %p#c_email
          Email
          = comment.email
        %p
          = set_time comment.data_p
        %p
          = comment.comment_content
        %hr

  = will_paginate @comments_q